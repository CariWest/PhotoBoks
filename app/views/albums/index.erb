<div class="container banner">
  <div class="album-header">
    <h1><b><%= album.title %><b></h1>
    <h2>#<%= album.tag.name %></h2>
  </div>
</div>

<div class="container dark-background">

  <% if can_edit %>
    <%= erb :"albums/_edit_nav", locals: { album: album } %>
  <% end %>

  <div class="scrapbook-container">
    <% album.photos.each do |photo| %>
      <%= erb :"/albums/_photo", locals: { photo: photo } %>
    <% end %>
  </div>
</div>


<div class="container banner">
  <div class="album-header">
    <h1><b><%= album.title %><b></h1>
    <h2>#<%= album.tag.name %></h2>
  </div>
</div>

<div class="container dark-background">
  <div class="album-nav">
    <h3 class="right">
      <a class="delete light-text" href="/albums/<%= album.id %>">Delete</a>
    </h3>
    <h3 class="left">
      <a class="edit light-text" href="/albums/<%= album.id %>/edit">Edit</a>
    </h3>
  </div>

  <div class="scrapbook-container">
    <% album.photos.each do |photo| %>
      <%= erb :"/albums/_photo", locals: { photo: photo } %>
    <% end %>
  </div>
</div>

